<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.unlegacy_android.updater"
    android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.REBOOT"/>
    <uses-permission android:name="android.permission.RECOVERY"/>
    <uses-permission android:name="android.permission.ACCESS_CACHE_FILESYSTEM"/>
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER"/>
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER_ADVANCED"/>

    <application
        android:name=".SystemUpdate"
        android:allowBackup="false"
        android:label="@string/system_update_activity_name"
        android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <activity
            android:name=".SystemUpdateActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:maxRecents="0">
            <intent-filter android:priority="999">
                <action android:name="android.settings.SYSTEM_UPDATE_SETTINGS"/>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
            android:name=".SystemUpdateReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="org.unlegacy_android.updater.action.START_DOWNLOAD"/>
                <action android:name="org.unlegacy_android.updater.action.ACTION_DOWNLOAD_COMPLETE"/>
                <action android:name="org.unlegacy_android.updater.action.INSTALL_UPDATE"/>
            </intent-filter>
        </receiver>

        <service android:name=".SystemUpdateService"/>
    </application>

</manifest>